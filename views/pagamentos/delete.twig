{% extends "layouts/site.twig" %}
{% block content %}
  <section class="home-section">
        <div class="container pt-5">
            <h2>Métodos de pagamentos</h2>
            <form method="post" >
                <div class="row">
					{% if pagamento is defined %}
                    	<div class="mb-3 card-delete">
							<h3>Deletar</h3>
    						<p>Tem certeza que deseja deletar o pagamento <b>{{pagamento.nome}}</b> #{{pagamento.id}}</p>
                			<button type="submit" class="btn btn-primary">Deletar</button>

                		</div>
					{% endif %}
                </div>


				{% if success ==  true %}
					<div class='alert alert-success' role='alert'>
						Métodos de pagamentos deletado com sucesso!
					</div>
				{% endif %}
                {% if success == false and message is defined %}

					<div class="alert alert-danger">
						{{ message }}
					</div>
                {% endif %}
                <a href="/pagamentos" class="btn btn-primary">Voltar</a>
            </form>
        </div>

    </section>

{% endblock %}
